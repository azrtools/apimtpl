{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "name": {
      "type": "string",
      "pattern": "^[A-Za-z0-9][A-Za-z0-9_-]*[A-Za-z0-9]$"
    },
    "displayName": {
      "type": "string",
      "pattern": "^[A-Za-z0-9][A-Za-z0-9 _-]*[A-Za-z0-9]$"
    },
    "ref": {
      "type": "string",
      "pattern": "^(\\$\\{[a-zA-Z0-9.]+\\}|[A-Za-z0-9_-]+)+$"
    },
    "path": {
      "type": "string",
      "pattern": "^(\\$\\{[a-zA-Z0-9.]+\\}|[A-Za-z0-9./_-]+)+$"
    },
    "configuration": {
      "type": "object",
      "additionalProperties": false,
      "required": ["serviceName"],
      "properties": {
        "serviceName": {
          "$ref": "#/definitions/name"
        }
      }
    },
    "api": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "displayName": {
          "$ref": "#/definitions/displayName"
        },
        "path": {
          "$ref": "#/definitions/path"
        },
        "policies": {
          "$ref": "#/definitions/policies",
          "default": {}
        },
        "properties": {
          "type": "array",
          "default": [],
          "items": {
            "$ref": "#/definitions/property"
          }
        },
        "operations": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/operation"
          }
        }
      }
    },
    "policies": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "inbound": {
          "type": "string"
        },
        "backend": {
          "type": "string"
        },
        "outbound": {
          "type": "string"
        },
        "on-error": {
          "type": "string"
        }
      }
    },
    "operation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "method", "path"],
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "displayName": {
          "$ref": "#/definitions/displayName"
        },
        "method": {
          "enum": [
            "GET",
            "HEAD",
            "POST",
            "PUT",
            "DELETE",
            "CONNECT",
            "OPTIONS",
            "TRACE",
            "PATCH"
          ]
        },
        "path": {
          "$ref": "#/definitions/path"
        },
        "policies": {
          "$ref": "#/definitions/policies",
          "default": {}
        }
      }
    },
    "property": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "value"],
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "displayName": {
          "$ref": "#/definitions/displayName"
        },
        "value": {
          "type": "string"
        },
        "secret": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "environment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "displayName": {
          "$ref": "#/definitions/displayName"
        },
        "configuration": {
          "$ref": "#/definitions/configuration"
        },
        "apis": {
          "type": "array",
          "default": [],
          "items": {
            "$ref": "#/definitions/api"
          }
        },
        "products": {
          "type": "array",
          "default": [],
          "items": {
            "$ref": "#/definitions/product"
          }
        },
        "subscriptions": {
          "type": "array",
          "default": [],
          "items": {
            "$ref": "#/definitions/subscription"
          }
        }
      }
    },
    "product": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "displayName": {
          "$ref": "#/definitions/displayName"
        },
        "apis": {
          "type": "array",
          "default": [],
          "items": {
            "$ref": "#/definitions/name"
          }
        }
      }
    },
    "subscription": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        },
        "displayName": {
          "$ref": "#/definitions/displayName"
        },
        "scope": {
          "type": "object",
          "additionalProperties": false,
          "required": ["product"],
          "properties": {
            "product": {
              "$ref": "#/definitions/ref"
            }
          }
        }
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "required": ["configuration", "environments", "apis"],
  "properties": {
    "configuration": {
      "$ref": "#/definitions/configuration"
    },
    "environments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/environment"
      }
    },
    "apis": {
      "type": "array",
      "default": [],
      "items": {
        "allOf": [{ "$ref": "#/definitions/api" }],
        "required": ["name", "path", "operations"]
      }
    },
    "products": {
      "type": "array",
      "default": [],
      "items": {
        "$ref": "#/definitions/product"
      }
    },
    "subscriptions": {
      "type": "array",
      "default": [],
      "items": {
        "allOf": [{ "$ref": "#/definitions/subscription" }],
        "required": ["name", "scope"]
      }
    }
  }
}
