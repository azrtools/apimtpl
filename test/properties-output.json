{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serviceName": {
      "type": "string",
      "defaultValue": ""
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service/apis",
      "name": "[concat(parameters('serviceName'), '/example-api-development')]",
      "properties": {
        "displayName": "Example-Api - Development",
        "apiRevision": "1",
        "subscriptionRequired": true,
        "path": "example-api",
        "protocols": [
          "https"
        ],
        "isCurrent": true
      },
      "apiVersion": "2019-01-01"
    },
    {
      "type": "Microsoft.ApiManagement/service/properties",
      "name": "[concat(parameters('serviceName'), '/example-api-development-default-username')]",
      "properties": {
        "displayName": "ExampleApi-Development-Default-Username",
        "value": "user001",
        "secret": false
      },
      "apiVersion": "2019-01-01"
    },
    {
      "type": "Microsoft.ApiManagement/service/properties",
      "name": "[concat(parameters('serviceName'), '/example-api-development-default-password')]",
      "properties": {
        "displayName": "ExampleApi-Development-Default-Password",
        "value": "password123",
        "secret": true
      },
      "apiVersion": "2019-01-01"
    },
    {
      "type": "Microsoft.ApiManagement/service/apis/operations",
      "name": "[concat(parameters('serviceName'), '/example-api-development/get-data')]",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/apis', parameters('serviceName'), 'example-api-development')]"
      ],
      "properties": {
        "displayName": "Get-Data",
        "method": "GET",
        "urlTemplate": "/data",
        "templateParameters": [],
        "responses": []
      },
      "apiVersion": "2019-01-01"
    },
    {
      "type": "Microsoft.ApiManagement/service/apis/operations/policies",
      "name": "[concat(parameters('serviceName'), '/example-api-development/get-data/policy')]",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/apis/operations', parameters('serviceName'), 'example-api-development', 'get-data')]",
        "[resourceId('Microsoft.ApiManagement/service/apis', parameters('serviceName'), 'example-api-development')]"
      ],
      "properties": {
        "value": "<policies><inbound><base /></inbound><backend><base /></backend><outbound><base /></outbound><on-error><base /></on-error></policies>",
        "format": "xml"
      },
      "apiVersion": "2019-01-01"
    },
    {
      "type": "Microsoft.ApiManagement/service/apis/policies",
      "name": "[concat(parameters('serviceName'), '/example-api-development/policy')]",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/apis', parameters('serviceName'), 'example-api-development')]"
      ],
      "properties": {
        "value": "<policies><inbound><base />\n<set-backend-service base-url=\"https://example.com\" />\n<authentication-basic username=\"{{ExampleApi-Development-Default-Username}}\" password=\"{{ExampleApi-Development-Default-Password}}\" />\n</inbound><backend><base /></backend><outbound><base /></outbound><on-error><base /></on-error></policies>",
        "format": "xml"
      },
      "apiVersion": "2019-01-01"
    }
  ]
}
